<p id="notice"><%= notice %></p>

<% content_for :admin do %>
  <p> You are an Admin! </p>
  <h1>Courses</h1>

<table  class="hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path , class: 'button success'%>
<% end %>


<% content_for :lecturer do %>
  <P> You are an Lecturer! </P>
  <p> This is the Courses Index for Lecturer! </p>
  <h1>Courses</h1>

  <table class="hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
      </tr>
    <% end %>

  </tbody>
</table>
<br>
<%= link_to 'New Course', new_course_path, class: 'button success' %>
<% end %>

<% content_for :student do %>
  <p> You are an Student! </p>
  <p> This is the Courses Index for Student! </p>
  <%= link_to 'My Info', users_path(current_user)  , class: 'button primary'  %>
  <h1>Available Courses</h1>

  <table class="hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% current_user.courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= link_to 'Show', course %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<% end %>
