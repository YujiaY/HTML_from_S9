  <h1>Contents</h1>

  <table class="hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% contents.each do |content| %>
      <tr>
        <td><%= content.name %></td>
        <td><%= link_to 'Show', content %></td>
        <td><%= link_to 'Edit', edit_content_path(content) %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<%= link_to 'New Content', new_content_path , class: 'button success' %>
